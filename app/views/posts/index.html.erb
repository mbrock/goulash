<div class="postlist">
  <ul>
    <% @posts.each do |post| %>
      <li>
        <div class="postlist-content">
          <a href="<%= url_for post %>">
            <h4 class="postlist-name">
              <%= post.title %>
            </h4>
          </a>
          <%= post.user.email %>
        </div>
      </li>
    <% end %>
  </ul>
</div>